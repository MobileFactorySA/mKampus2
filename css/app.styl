@import 'bootstrap.css'
@import 'bootstrap-responsive.css'
@import 'nib/vendor'

////////////////// VARIABLES //////////////////

blue = #0074cc

////////////////// UNIVERSAL UPGRADES //////////////////

h3 > i
  margin-top 4px

.row-fluid
  textarea.span12, input.span12
    width 100%

////////////////// EXTENSIONS //////////////////

.hidden
  display none

.hover-switch
  &:hover .hover-off, &:not(:hover) .hover-on
    display none

.editable.active .show, .editable:not(.active) .edit
  display none

.form-actions.compact
  margin-top 0px
  margin-bottom 0px

.compact-bottom
  margin-bottom 0px

.compact
  .form-actions
    margin-top 0px

  .form-actions:not(:last-child)
    margin-bottom 0px

  input[type=text]:last-of-type, textarea:last-of-type
    margin-bottom 0px

.slot
  box-sizing border-box
  padding 20px
  // min-height 80px
  // line-height: 40px

.category
  @extend .slot
  padding-top 30px
  padding-bottom 20px


.item
  @extend .slot
  // border-top: 1px solid #ddd
  // border-bottom: 1px solid #ddd
  // margin-bottom: -1px
  border-top: 1px solid #ddd
  margin-top: -1px
  background-color: #fff

.selectable
  @extend .item
  padding-right: 60px
  cursor pointer
  background-image url('/img/right-arrow.png')
  background-position right
  background-repeat no-repeat
  
  &:hover
    background-color #f5f5f5
  
  &:active
    background-color blue
    color white

.configurable
  @extend .selectable
  background-image url('/img/down-arrow.png')
  
  // &:last-child
  //   border-bottom 0

@media (min-width: 768px)
  .selectable
    &:nth-last-child(2)
      border-bottom 0
    &:nth-last-child(3)
      border-bottom 0

//////////////////////// ADD HEADER ////////////////////////

.form-actions.section
  border-top 0
  margin-bottom 0
  margin-top 1px

// .form-actions.toolbar
//   background-color #ddd

.add-section
  @extend .slot
  
  .form-actions:not(:first-of-type)
    border-top: 1px solid #ddd
  
  
  .add
    margin-bottom 0
  
  form
    @extend .compact
    margin-bottom 0
    
  .form-actions
    border-top 0
    margin-bottom 0

.add
  width: 100%

.add.title
  font-size: 20px

textarea.add
  @extend .slot

input[type=text].add
  box-sizing border-box
  height 60px
  padding-left 20px

h1.add
  // margin-top: -1
  

.editable.active
  .add
    border-bottom-left-radius 0
    border-bottom-right-radius 0

@media (max-width: 767px)
    
  input[type=text].add
    height: 40px

